{
  "name": "@pegasusheavy/nestjs-angular-ssr",
  "version": "0.1.0",
  "description": "Angular SSR (v19+) module for NestJS framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tokens"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"lib/**/*.ts\"",
    "lint:fix": "eslint \"lib/**/*.ts\" --fix",
    "format": "prettier --write \"lib/**/*.ts\"",
    "format:check": "prettier --check \"lib/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "nestjs",
    "angular",
    "ssr",
    "server-side-rendering",
    "angular-ssr",
    "express"
  ],
  "author": "Pegasus Heavy Industries LLC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pegasusheavy/nestjs-angular-ssr.git"
  },
  "bugs": {
    "url": "https://github.com/pegasusheavy/nestjs-angular-ssr/issues"
  },
  "homepage": "https://github.com/pegasusheavy/nestjs-angular-ssr#readme",
  "peerDependencies": {
    "@angular/ssr": ">=19.0.0",
    "@nestjs/common": ">=10.0.0",
    "@nestjs/core": ">=10.0.0",
    "express": ">=4.18.0",
    "reflect-metadata": ">=0.1.13",
    "rxjs": ">=7.0.0"
  },
  "devDependencies": {
    "@angular/ssr": "^19.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import-x": "^4.0.0",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-perfectionist": "^4.0.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-regexp": "^2.0.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^3.0.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "express": "^4.21.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens.d.ts",
      "require": "./dist/tokens.js"
    }
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
