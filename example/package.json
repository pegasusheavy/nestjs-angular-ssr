{
  "name": "nestjs-angular-ssr-example",
  "version": "1.0.0",
  "description": "Example application using @pegasus-heavy/nestjs-angular-ssr",
  "private": true,
  "scripts": {
    "build": "pnpm build:angular && pnpm build:nest",
    "build:angular": "cd angular && ng build",
    "build:nest": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main.js"
  },
  "dependencies": {
    "@angular/ssr": "^19.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@pegasus-heavy/nestjs-angular-ssr": "workspace:*",
    "express": "^4.21.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}
